pattern:
  name: <%= @name %>-master
<%- if @address4 -%>
  allow-notify: <%= @address4 %> NOKEY
  <%- if ! @address4.include?('/') -%>
  request-xfr: AXFR <%= @address4 %> <%= @_tsig_name %>
  <%- end -%>
<%- end -%>
<%- if @address6 -%>
  allow-notify: <%= @address6 %> NOKEY
  <%- if ! @address6.include?('/') -%>
  request-xfr: AXFR <%= @address6 %> <%= @_tsig_name %>
  <%- end -%>
<%- end -%>
pattern:
  name: <%= @name %>-provide-xfr
<%- if @address4 -%>
  <%- if ! @address4.include?('/') -%>
  notify: <%= @address4 %> NOKEY
  <%- end -%>
  provide-xfr: <%= @address4 %> <%= @_tsig_name %>
<%- end -%>
<%- if @address6 -%>
  <%- if ! @address6.include?('/') -%>
  notify: <%= @address6 %> NOKEY
  <%- end -%>
  provide-xfr: AXFR <%= @address6 %> <%= @_tsig_name %>
<%- end -%>
pattern:
  name: <%= @name %>-allow-notify-addition
<%- if @address4 -%>
  allow-notify: <%= @address4 %> NOKEY
<%- end -%>
<%- if @address6 -%>
  allow-notify: <%= @address6 %> NOKEY
<%- end -%>
pattern:
  name: <%= @name %>-send-notify-addition
<%- if @address4 and ! @address4.include?('/') -%>
  notify: <%= @address4 %> NOKEY
<%- end -%>
<%- if @address6 -%>
  notify: <%= @address6  and ! @address6.include?('/') -%> NOKEY
<%- end -%>

